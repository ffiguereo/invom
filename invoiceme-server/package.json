{
  "name": "invoiceme-server",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/CodelyTV/typescript-ddd-skeleton"
  },
  "license": "",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.14.0"
  },
  "scripts": {
    "dev:ivom:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  src/apps/ivom/backend/start.ts",
    "lint": "tslint src/**/*.ts{,x}",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "start:ivom:backend": "NODE_ENV=production node dist/src/apps/ivom/backend/start",
    "test:features": "npm run test:ivom:backend:features",
    "test:ivom:backend:features": "NODE_ENV=test cucumber-js -p ivom_backend",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "convict": "^6.2.1",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "copy": "^0.0.1",
    "errorhandler": "^1.5.1",
    "express": "^4.17.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.14.0",
    "glob": "^7.2.0",
    "helmet": "^5.0.1",
    "http-status": "^1.5.0",
    "mongodb": "^4.2.2",
    "node-dependency-injection": "^2.7.1",
    "rxjs": "^7.5.2",
    "uuid": "^8.3.2",
    "uuid-validate": "^0.0.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^8.0.0-rc.1",
    "@types/compression": "^1.7.2",
    "@types/convict": "^6.1.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.44",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/glob": "^7.2.0",
    "@types/helmet": "0.0.48",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.7",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.3",
    "@types/uuid-validate": "^0.0.1",
    "faker": "^5.5.3",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "12.1.5",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "~1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
